
    <header >
    <div class="divImagenLogo">
        <img src="/images/logomonedas.png" alt="Logo">
    </div>
    <div class="navHeader">
        <nav>
            <ul>
            <li><a href="/profile/events">Eventos</a></li>
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/auth/logout">Log out</a></li>
            </ul>
        </nav>
    </div>
    </header>
    
    <section class="sectionGastos">
        <h1 class="tituloDelEvento">Evento</h1>
        <div class="divCardGastosEvent">
            <div class="divGastosIMg">
                <img src={{eventImg}}>
            </div>
            <div class="divCaracteristicasEvent">
                <h1>{{nameEvent}}</h1>
                <h1 style="margin-bottom: 20px;">{{tittle}}</h1>
                <p> Fecha del evento: {{date}}</p>
                <p>Autor del evento:  {{author}}</p>
            </div>
            <div class="divParticipantes">
                <h1>Participantes</h1>
                <ul>
                    {{#each participants}}
                    <li><p>{{Usuario}}</p></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="divGastos">
            <div class="divGastosParticipantes">
                <h2>Lista de Gastos</h2>
                {{#each participants}}
                <div class="divGastoParticipantes">
                    <p>{{Usuario}}</p>
                    <p>{{descripcion}}</p>
                    <p>${{gasto}}</p>
                </div> 
                {{/each}}
            </div>
            <div class="divNuevoGasto">
                <form action="/profile/nuevo/gasto" method="POST">
                    <h2 style="margin-bottom: 35px;">Nuevo Gasto</h2>
                    <input type="hidden" name="id" id="id" value={{_id}}>
                    <div >
                        <label for="descripcion">Descripci√≥n</label>
                        <input type="text" name="descripcion" id="descripcion">
                    </div>
                    <div>
                        <label for="gasto">Cantidad</label>
                        <input type="text" name="gasto" id="gasto">
                    </div>
                    <button type="submit">Aceptar</button>
                </form>
            </div>
        </div>

    </section>
